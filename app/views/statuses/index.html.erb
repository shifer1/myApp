<div class="page-header">
  <h1>All of the statuses</h1>
</div>
    <div style="margin:0 0 10px 0;"><%= link_to "New post", new_status_path, class:"btn btn-success" %></div>

    <% @statuses.each do |status| %>
      <div class="status">
        <strong><%= status.name %></strong>
        <p><%= status.content %></p>
          <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <span class="admin">
              | <%= link_to 'Edit', edit_status_path(status) %> | 
              <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure delete this item?' } %>
            </span>
          </div>
      </div>
    <% end %>
<br>

<%= link_to 'New Status', new_status_path %>
